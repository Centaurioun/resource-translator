{
  "name": "@ievangelist/resource-translator",
  "version": "0.1.0",
  "preview": true,
  "keywords": [
    "github",
    "actions",
    "resource",
    "localization",
    "azure",
    "translator"
  ],
  "description": "A GitHub action that uses Azure Cognitive Services translator to generate .resx resource files",
  "main": "lib/resource-translator.js",
  "types": "lib/resource-translator.d.ts",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib",
    "!.DS_Store"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "tsc": "tsc",
    "format": "prettier --write src/**/*.ts",
    "format-check": "prettier --check src/**/*.ts",
    "lint": "eslint src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IEvangelist/resource-translator.git"
  },
  "author": "IEvangelist",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IEvangelist/resource-translator/issues"
  },
  "homepage": "https://github.com/IEvangelist/resource-translator#readme",
  "dependencies": {
    "@actions/cache": "^0.2.1",
    "@actions/core": "^1.2.4",
    "@actions/github": "^4.0.0",
    "@actions/glob": "^0.1.0",
    "@actions/io": "^1.0.2",
    "@actions/tool-cache": "^1.5.5",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "uuidv4": "^6.1.1",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/node": "^12.12.47",
    "@typescript-eslint/parser": "^2.2.7",
    "concurrently": "^4.1.0",
    "eslint": "^5.16.0",
    "eslint-plugin-github": "^2.0.0",
    "prettier": "^1.19.1",
    "typescript": "^3.9.2"
  }
}
